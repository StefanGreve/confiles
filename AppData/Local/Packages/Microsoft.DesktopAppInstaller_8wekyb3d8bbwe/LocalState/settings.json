{
    "$schema": "https://aka.ms/winget-settings.schema.json",
    "visual": {
        "progressBar": "retro"
    },
    "installBehavior": {
        "preferences": {
            "scope": "user",
            "locale": [
                "en-US",
                "ja-JP"
            ]
        }
    },
    "uninstallBehavior": {
        "purgePortablePackage": true
    },
    "network": {
        "downloader": "do"
    },
    "telemetry": {
        "disable": true
    },
    "experimentalFeatures": {
        "directMSI": true,
        "dependencies": true,
        "configuration": true,
        "windowsFeature": true
    }
}
